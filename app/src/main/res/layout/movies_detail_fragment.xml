<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mno.mohamed_youssef.movie1.MovieDetailActivity"
    tools:showIn="@layout/movie_detail">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal|bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/title_label"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:background="#03b9a3"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/poster"
                android:layout_rowSpan="4"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/date"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/runtime"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/vote"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make As \nFavourite"
                android:id="@+id/favourite"
                android:layout_row="4"
                android:layout_column="1"
                android:background="#04fcdd"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/overview"
                android:layout_row="5"
                android:layout_columnSpan="2"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />
        </GridLayout>



            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/trailers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trailers :"
                android:background="#03b9a3"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="25sp"
                android:layout_marginTop="10dp"/>


            <com.linearlistview.LinearListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:divider="#80615d5d"
                android:id="@+id/trailers"
                android:layout_marginTop="1dp"
                android:showDividers="middle|end"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/reviews_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews :"
                android:background="#03b9a3"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp" />

            <com.linearlistview.LinearListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/reviews"
                android:layout_marginTop="1dp"
                android:showDividers="middle"
                android:divider="#80595656"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp" />




        </LinearLayout>

    </ScrollView>


</FrameLayout>